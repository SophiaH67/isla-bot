generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RssFeed {
  id           String        @id @default(uuid())
  url          String
  syncChannel  String
  syncFrontend String
  createdAt    DateTime      @default(now())
  RssFeedSeen  RssFeedSeen[]
}

model RssFeedSeen {
  tracker   String   @id // Whatever identifier we can use to identify the item
  feedId    String
  feed      RssFeed  @relation(fields: [feedId], references: [id])
  createdAt DateTime @default(now())

  @@unique([tracker, feedId])
}

model MessageAction {
  name   String @id
  script String

  channel  String
  frontend String

  createdAt DateTime @default(now())

  @@unique([name, channel, frontend])
}
